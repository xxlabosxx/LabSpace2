@model LabSpace2.Models.Categoria

@{
    ViewData["Title"] = "Criar";
}

<h1 class="text-light">Criar</h1>

<h4 class="text-light">Categoria</h4>
<hr />
<div class="row" style="min-height: 55vh">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-warning my-3" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="text-light">Voltar para a lista</a>
</div>

