@model LoginViewModel
<link rel="stylesheet" href="Login.cshtml.css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

<div class="row ">
    <form asp-controller="Account" asp-action="Login" method="post" class="col-4 my-5 bg-black rounded-4 mx-auto p-5"
        role="form">
        <div class="d-flex justify-content-center mx-auto" >
            <img src="~/imgs/iconefogo.png" alt="" class="" id="">
        </div>
        <h4 class="text-light text-center mt-3 koulen">Login</h4>
        <div asp-validation-summary="All" class="text-danger"></div>


        <label asp-for="UserName" class="control-label text-light "></label>
        <input asp-for="UserName" class="form-control col-md-6 " />
        <span asp-validation-for="UserName" class="text-danger"></span>

        <label asp-for="Password" class=" control-label text-light mt-4"></label>
        <input asp-for="Password" class="form-control" />
        <span asp-validation-for="Password" class="text-danger"></span>

        <div class="mt-5 d-flex justify-content-center">
            <input type="submit" class="btn btn-warning col-12" value="Acessar" />
        </div>
        <hr class="mx-auto text-warning">
        <p class="text-light text-center">Acesse com m√≠dias sociais</p>
        <div id="iconeslogin" class="text-light text-center fs-1">
            <i class="bi bi-instagram"></i>
            <i class="bi bi-google"></i>
            <i class="bi bi-whatsapp"></i>
        </div>

    </form>
</div>
