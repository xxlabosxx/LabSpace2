
<div class="card mb-3 col-md-8 bg-dark border-0 shadow-lg mx-auto mt-4"  >
    <div class="row g-3">
        <div class="col-md-6 ">
            <img src="@Model.ImagemPequenaUrl" class="img-fluid rounded-3" id="fotos" asp-append-version="true">
        </div>
        <div class="col-md-6 ">
            <div class="card-body">
                <h5 class="card-title">  <a asp-controller="Item" asp-action="Details" asp-route-itemId="@Model.ItemId" class="text-decoration-none text-white">@Model.Nome</a></h5>
                <h3 class=" text-light">Pre√ßo: @Model.Preco.ToString("c")</h3>
                <p class="card-text"><small class="text-light ">@Model.DescricaoCurta</small></p>
                 <a class="btn btn-warning col-6 mt-3" id="cartButton" asp-controller="Carrinho" asp-action="AdicionarItemNoCarrinhoCompra" asp-route-itemId="@Model.ItemId" >Incluir no Carrinho</a>
            </div>
        </div>
    </div>
</div>